// 设置数据
void ReportManager::setProducts(const vector<Product>& p) {
    products = p;
}

void ReportManager::setSales(const vector<SaleRecord>& s) {
    sales = s;
}

void ReportManager::setMembers(const vector<Member>& m) {
    members = m;
}

